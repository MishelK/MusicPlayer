<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song Name"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textSize="16sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Name"
        android:gravity="center"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:id="@+id/et_song_name"
        android:textColorHint="#000000"
        android:background="@drawable/edit_text_border"
        android:padding="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song Link"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="URL"
        android:gravity="center"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:id="@+id/et_song_url"
        android:textColorHint="#000000"
        android:background="@drawable/edit_text_border"
        android:padding="2dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select image from storage"
        android:textSize="14dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_select_image_storage"
        android:background="#000000"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take picture using camera"
        android:textSize="14dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_take_image"
        android:background="#000000"
        android:textColor="#ffffff"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="CANCEL"
            android:id="@+id/btn_cancel_song_dialog"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="18dp"
            android:background="#000000"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="ADD"
            android:id="@+id/btn_add_song_dialog"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="18dp"
            android:background="#000000"
            android:textColor="#ffffff"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</LinearLayout>